<!DOCTYPE html>
<html>
  <head>
    <title>Tone Quest</title>
    <%= csrf_meta_tags %>
    <!-- <link rel=“stylesheet” href=“https://unpkg.com/react-select/dist/react-select.css“> -->
    <%= stylesheet_link_tag 'application', "https://fonts.googleapis.com/css?family=Oswald", media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user  %>
     <div class="google">Welcome, <%= "#{current_user.first_name} #{current_user.last_name}" %>
        <div id ="google-sign-in" class="hollow button"><%= link_to "Logout", logout_path %></div>
      <% else %>
        <div class='google'>
          <div id ="google-sign-in" class="hollow button">
          <%= link_to "Sign in with Google", "/auth/google" %></div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- <div id='app'>
    </div> -->
    <%= yield %>
  </body>
</html>
